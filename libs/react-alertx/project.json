{
  "name": "react-alertx",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/react-alertx/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "libs/react-alertx/**/*.{ts,tsx,js,jsx}"
        ]
      }
    },
    "compile-tailwind": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx tailwindcss@latest -c ./libs/react-alertx/tailwind.config.js -o ./libs/react-alertx/src/lib/styles/alertx-tailwind.scss"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx nx build-vite react-alertx && npx nx compile-tailwind react-alertx"
      }
    },
    "build-vite": {
      "executor": "@nx/vite:build",
      "outputs": [
        "{options.outputPath}"
      ],
      "defaultConfiguration": "production",
      "options": {
        "postcssConfig": "/libs/react-alertx/postcss.config.js",
        "outputPath": "dist/libs/react-alertx"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "publish:major": {
      "executor": "nx:run-script",
      "options": {
        "script": "npm version major && npm publish --access=public",
        "cwd": "/dist/libs/react-alertx",
        "parallel": false
      }
    },
    "publish:minor": {
      "executor": "nx:run-script",
      "options": {
        "script": "npm version minor && npm publish --access=public",
        "cwd": "/dist/libs/react-alertx",
        "parallel": false
      }
    },
    "publish:patch": {
      "executor": "nx:run-script",
      "options": {
        "script": "npm version patch && npm publish --access=public",
        "cwd": "/dist/libs/react-alertx",
        "parallel": false
      }
    }
  }
}
